/**index.wxss**/
page{
  background: #ffffff;
  height: 100%;
  width:100%;


}

.content{
 width: 100%;
 height:100%;

}
.left_content{
  width:70px;
  height:100%;
  float:left;
}
.left_nav{
  height:100%;
  display: flex;
  flex-direction: column;
  border-right:1rpx solid #f5f5f5;
}

.nav_item{
position: relative;
flex: 1;
text-align: center;
font-size: 13px;
display: flex;
align-items: center;
justify-content: center;
color:#666666;
 
}
.nav_item_active{
  color:#000000;
  font-size:15px;
  font-weight: 600;

}
.nav_item_active:after{
  display: block;
  content: '';
  height:20px;
  width:3px;
  background: #000000;
  position: absolute;
  top:50%;
  left:1px;
  transform: translateY(-50%)

}




.right_content{
  float:left;
  overflow: hidden; 
  height:100%;
  position: relative;
  
}

.category_list_content{
  width: 100%;
  position: absolute;
  left:0px;
  transition: all 1s;

}






.category_image{
  height:100px;
  width:100%;
  display: block;
}

.category_title{
  display: block;
  font-size: 12px;
  width:100%;
  text-align: center;
  padding:8px 0px;
}



.category_child{
  width:100%;
  display: flex;
  flex-wrap: wrap;
  
  
  
}

.category_children{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-bottom:8px;
  width:20%;
}
.category_children image{
  display: block;
  width:45px;
  height:45px;
}

.category_children text{
  font-size: 12px;
  padding:4px 0px;
}

.item{
  width:100%;
  height:300px;
  overflow: hidden;
}
