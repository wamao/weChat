/* pages/order.wxss */
page{
  background:#f5f5f5;
  width:100%;
   
}

.content{
  padding-bottom:45px;
}
.address{
  background: #ffffff;
  margin-top:8px;
  margin-bottom:8px;
  
}

.address > view{
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
 padding:0px 15px 15px 15px;


}

.address view image{
  width:24px;
  height: 24px;
}
.address view view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
 
}
.address view text{
  display: block;
  font-size: 12px;
}

.address view text:first-child{
  color:#000000;
  font-weight: 600;
}

.address view text:last-child{
  color:#333333;
  margin-top:8px;
}









.coupon{
  background: #ffffff;
  margin-top:8px;
  margin-bottom:8px;
  
}

.coupon > view{
  display: flex;
  box-sizing: border-box;
  align-items: center;
  justify-content: space-between;
 padding:0px 15px 15px 15px;


}

.coupon view image{
  width:24px;
  height: 24px;
}
.coupon view view{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
 
}
.coupon view text{
  display: block;
  font-size: 12px;
}

.coupon view text:first-child{
  color:#000000;
  font-weight: 600;
}

.coupon view text:last-child{
  color:#333333;
  margin-top:8px;
}









.title{
 display: block;
 padding:15px;
 background: #ffffff;
box-sizing: border-box;
font-size: 18px;
font-weight:600;
 
 }


.goodsContent{
  margin-bottom:8px;
  width:100%;
  background: #ffffff;
  box-sizing: border-box;
  padding:0px 5px 10px 5px;
  
}

.mark{
  display: flex;
  align-items: center;
  background: #f5f5f5;

  border-radius:5px;
  padding:2px 10px;

}
.mark text{
  display: block;
  width:40px;
  font-size: 12px;
  color:#000000;
}

.mark input{
  font-size: 12px;
}

.item{
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height:80px;
  background: #ffffff;
  padding:0px 15px;
  box-sizing: border-box;

}
.center{
  flex:1;
}
.imgurl{
  width:60px;
  height:60px;
  margin-right: 10px;
}

.slect{
  display:block;
  width:24px;
  height:24px;
  border-radius: 12px;
  border:1px solid #ccc;
}

.goodsName{
  font-size: 12px;
  display: block;
  color:#333333;
}
.price{
  width:100px;
  color:#d81e06;

  text-align: center;
}

.numbercontent{
  display: flex;
  flex-direction: row;
  width:100px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-top:5px;
  
}

.num{
  border-right:1px solid #ccc;
  border-left:1px solid #ccc;

}
.min,.add,.num{
  text-align: center;
  flex:1;
 
}



.active{
  display:block;
  width:24px;
  height:24px;
  border-radius: 12px;
  
}




.goods_price{
  font-size:12px;
  color:#000000;
  
}

.goods_num{
  font-size:13px;
  color:#000000;
   margin-top:5px;
  
}

.goodsStyle{
  font-size:12px;
  color:#666666
  ;
 
}

.goods_con{
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
  padding:10px;
  box-sizing: border-box;
 
}


.bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  height:40px;
  position: fixed;
  bottom:0px;
  left:0px;
  background: #ffffff;
  width:100%;
  z-index: 1;

}
.bottom text:first-child{
  
  font-size: 18px;
  padding-left: 15px;
  color: #000000;
  font-weight: 600;
  flex: 1;
  text-align: left;

}

.bottom text:last-child{
  display: block;
  background: #000000;
  text-align: center;
  color: #ffffff;
  width:120px;
  line-height: 40px;
  font-size: 13px;
  letter-spacing: 2px;
}


