}

.ad_content {
  width:100%;
  position: relative;
  
}

.ad_detail{
  position: absolute;
  top:0px;
  left:0px;
  width:100%;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.ad_detail text:nth-child(1){
  font-size: 18px;
  font-weight: 600;
  color:#ffffff;
}

.ad_detail text:nth-child(2){
    font-size: 14px;
  padding:5px 0px;
  color:#ffffff;
}

.ad_detail text:nth-child(3){
   font-size: 12px;
   border:1px solid #ffffff;
   color:#ffffff;
   padding:5px;
}


.ad{
  background: #ffffff;
}

.ad_goodslit{
   padding:10px 10px;
   
}
.ad_goodsitem{
  display: inline-block;
 

  
}


.ad_goodsitem text{
  display: block;
  text-align: center;
  font-size: 13px;
}
.ad_goodsitem image{
  width:150px;
  height:150px;
  display: block;
}

.point { 
width: 0; 
height: 0; 
border-left: 8px solid transparent; 
border-right: 8px solid transparent; 
border-bottom: 12px solid #ffffff; 
position: absolute;
bottom:0px;
left:50%;
transform: translateX(-50%)
} 


