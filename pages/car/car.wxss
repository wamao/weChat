page{
  background:#f5f5f5;
  width:100%;
   
}

.content{
  padding-bottom:40px;
}


.goodsContent{
  margin-top:5px;
  width:100%;
  position:relative;
  height:80px;
  overflow: hidden;
 
}

.item{
  position: absolute;
  top:0px;
  left:0px;
  width:100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  height:80px;
  background: #ffffff;
  -webkit-transition: all 0.5s;
  transition: all 0.5s;
  
}
.center{
  flex:1;
}
.imgurl{
  width:60px;
  height:60px;
  margin-right: 10px;
}

.slect{
  display:block;
  width:24px;
  height:24px;
  border-radius: 12px;
  border:1px solid #ccc;
}

.goodsName{
  font-size: 12px;
  display: block;
  color:#333333;
}
.price{
  width:100px;
  color:#d81e06;

  text-align: center;
}

.numbercontent{
  display: flex;
  flex-direction: row;
  width:100px;
  border: 1px solid #ccc;
  border-radius: 4px;
  margin-top:5px;
  
}

.num{
  border-right:1px solid #ccc;
  border-left:1px solid #ccc;

}
.min,.add,.num{
  text-align: center;
  flex:1;
 
}

.bottom{
  display: flex;
  flex-direction: row;
  align-items: center;
  height:40px;
  position: fixed;
  bottom:0px;
  left:0px;
  background: #fff;
  width:100%;

}
.allselect{
  display: flex;
  flex-direction: row;
  width:80px;
  justify-content: space-around;
  align-items: center;
}

.totalPrice{
 flex: 1;
 line-height: 50px;
 text-align: right;
 padding-right:10px;
 box-sizing: border-box;
 color:#000000;

}
.pay{
  width:120px;
  text-align: center;
  background: #000000;
  color:#fff;
  letter-spacing: 5px;
  line-height: 40px;
  font-size: 12px;
}

.active{
  display:block;
  width:24px;
  height:24px;
  border-radius: 12px;
  
}
.my-check{
  margin:0px 5px;

  padding:10px;
}

.delpng{
  width:24px;
  height:24px;
  margin-top: 20px;
}

.rightcontent{
  display: flex;
flex-direction: column;
justify-content: center;
align-items: center;

}

.center > view{
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding:5px 0px;

}
.goods_price{
  font-size:12px;
  color:#000000;
  
}

.goods_num{
  font-size:13px;
  color:#000000;
   margin-top:5px;
  
}

.goodsStyle{
  font-size:12px;
  color:#666666
  ;
 
}

.goods_con{
  height:100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-end;
  padding:10px;
  box-sizing: border-box;
 
}

.goods_del{
  background: #d81e06;
  color:#ffffff;
  height:100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  width:60px;
  position: absolute;
  right:-60px;
}

.totalSelect{
  display: flex;
  justify-content: center;
  align-items: center;
}

.totalSelect text{
  font-size:14px;

}

.no_data{
  width:100%;
  display: flex;
  height:200px;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.no_data text{
  font-size: 12px;
  line-height: 25px;
}