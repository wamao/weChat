<!--logs.wxml-->
<view class="add_address">
<view class='margin'></view>
 <view class='add_container'>
     <text class='title'>个人信息</text>
     <view class='input_content bottom_border'>
       <text>收货人名：</text>
       <input bindinput="bindName" placeholder='请输入收货人姓名'></input>
     </view>
     <view class='input_content '>
       <text>手机号码：</text>
       <input  bindinput="bindPhone"  placeholder='请输入手机号码'></input>
     </view>
 </view>
 <view class='margin'></view>
 <view class='add_container'>
     <text class='title'>收货地址</text>
     <view class='input_content  bottom_border'>
       <text>地区：</text>
        <picker class='picker'  mode="region" bindchange="bindRegionChange"  custom-item="{{customItem}}">
           <text>{{ContactAddress.length==0?'省份 城市 县区':ContactAddress}}</text>
        </picker>
     </view>
     <view class='input_content bottom_border'>
       <text>详细地址：</text>
       <input bindinput="bindDetail" placeholder='街道编号/名称，楼宇地址'></input>
     </view>
 </view>
</view>
<view class='select' bindtap="default" >
   <icon wx:if="{{isDefault}}" type="success" size="18" color='black' />
   <icon wx:else type="circle" size="18"  />
   <text>设为默认地址</text>
</view>
<view class="add_btn" bindtap='add'>
 <text>确认</text>
</view>

<Toast
  id='toast' 
  position="120"
  >
</Toast>

