/* components/loading.wxss */

.loading{
  width: 100%;
  height:50px;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading image{
  width:32px;
  height: 32px;
  margin-right:5px;
  animation: rotate 1s linear infinite;
}


@keyframes rotate{
  from{transform: rotate(0deg)}
  to{transform: rotate(360deg)}
}

.loading text{
  font-size: 12px;
  color: #333333;
}