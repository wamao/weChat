.addresslist{
  padding:0px 15px;
  width: 100%;
  padding-bottom:60px;
  box-sizing: border-box;
}

.address_item{
  border: 1px solid #dadada;
  width:100%;
  display: flex;
  padding:10px;
  margin-bottom: 10px;
  box-sizing: border-box;

}

.address_item_left{
   flex: 1;
   display: flex;
   flex-direction: column;
   
}
.address_item_left text:first-child{
  font-size: 12px;
  color:#000000;

}
.address_item_left text:nth-child(2){
  font-size: 12px;
  color:#999999;
}

.address_item_right{
  border-left:1px solid #f5f5f5;
  width:60px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.address_item_right image{
  width:20px;
  display: block;
  height: 20px;
}

.address_item_right text{
  font-size: 12px;
}

.add_btn{
  width:100%;
  height:60px;
  background:#ffffff;
  position :fixed;
  bottom:0px;
  left:0px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.add_btn text{
  color:#ffffff;
  font-size: 13px;
  display: block;
  width:90%;
  line-height: 45px;
  background: #000000;
  text-align: center;
  letter-spacing: 2px;
}

.no_data{
  width: 100%;
  height:200px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.no_data text{
 font-size: 12px;
}