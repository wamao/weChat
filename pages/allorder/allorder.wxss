/* pages/allorder/allorder.wxss */
page{
  background:#f5f5f5;
}
.order_tab{
  background: #ffffff;
  width: 100%;
  display: flex;
  border-bottom:1px solid #f5f5f5;
  height:40px;
  box-sizing: border-box;
}

.order_tab view{
 width:20%;
 font-size: 13px;
 color: #999999;
 text-align: center;
line-height: 40px;
 box-sizing: border-box;
}

.active{
  color:#000000 !important;
  font-weight: 700;
  font-size: 14px !important;
  border-bottom:2px solid #000000;
  box-sizing: border-box;
}

.no_data{
display: flex;
width:100%;
height:100%;
justify-content: center;
align-items: center;
font-size: 12px;
}

.order_content{
  background: #ffffff;
  margin-top:5px;
  padding:0px 15px;
  box-sizing: border-box;
}
.order_content > text{
  font-size:12px;
  color:#000000;
  display: block;
  padding:5px 0px;
}

.goods_detail {
  border-top:1px solid #f5f5f5;
  border-bottom:1px solid #f5f5f5;
  display:  flex;
  padding:10px 0px;
  
}

.goods_detail > image{
  width:50px;
  height:50px;
  display: block;
}
.goods_detail>view{
  display: flex;
  flex:1;
  flex-direction: column;
  padding:0px 10px;
  box-sizing: border-box;
}

.goods_detail > text{
  font-size:13px;
  color:#d81e06;
}

.goods_detail>view text{
  font-size: 12px;
  color:#000000;
}

.goods_price{
  height:35px;
  width:100%;
  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding:5px 0px;
}

.goods_price text{
  font-size: 12px;
  color:#000000;
}

.btn{
  display: block;
  line-height: 25px;
  border:1px solid #333333;
  width: 60px;
  border-radius:5px;
  text-align: center;
  letter-spacing: 2px;
}

.btn_content{
  width:140px;
  display: flex;
  justify-content: space-between;
}

.pay{
  border:1px solid #d81e06 !important;
  color:#d81e06 !important;
}


