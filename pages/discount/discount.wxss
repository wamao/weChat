/* pages/discount/discount.wxss */

page{
  background: #f5f5f5;
}
.item{
  display: flex;
  background: #ffffff;
  padding:15px;
  margin-top:8px;
 
  align-items: center;

}

.item_left {
  position: relative;
}
.item_left  view{
 position: absolute;
 width:50px;
 height:50px;
 background: #333333;
 left: 0px;
 bottom: 0px;
 color: #ffffff;
 font-weight: 600;
 border-radius: 25px;
 font-size: 13px;
 justify-content: center;
 align-items: center;
 display: flex;

}
.item_left image{
   width:100px;
   height:100px;
   display: block;
}

.item_right{
 margin-left: 10px;
 display: flex;
 flex-direction:column;
}

.item_right > text:nth-child(1){
  font-size: 12px;
  background: #dadada;
  width:80px;
  line-height: 20px;
  text-align: center;
  border-radius: 5px;
}

.item_right > text:nth-child(2){
    font-weight: 600;
    font-size: 13px;
    line-height: 25px;
} 

.item_right view text:nth-child(1){
  font-size: 18px;
  font-weight: 700;
  color:#000000;
}

.item_right view text:nth-child(2){
  font-size: 13px;
  color:#666666;
  margin-left:8px;
  text-decoration: line-through;
}